
@{
    ViewBag.Title = "CategoryPostList";
    Layout = "~/Views/HomeLayout.cshtml";
}
@model DTO.GeneralDTO
<!-- ##### Archive List Posts Area Start ##### -->
<div class="vizew-archive-list-posts-area mb-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Archive Catagory & View Options -->
                <div class="archive-catagory-view mb-50 d-flex align-items-center justify-content-between">
                    <!-- Catagory -->
                    <div class="archive-catagory">
                        <h4><i class="" aria-hidden="true"></i> @Model.CategoryName </h4>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="section-heading">
                            <a href="@Model.Adslist[1].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImage/@Model.Adslist[1].ImagePath" /></a>
                        </div>
                    </div>
                </div>
                <br />
                @if (Model.Videos != null && Model.Videos.Count != 0)
                {
                    foreach (var item in Model.Videos)
                    {
                        <!-- Single Post Area -->
                        <div class="single-post-area style-2">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-6">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <a href="@item.OriginalVideoPath" target="_blank">
                                            <iframe width="350" height="200" src="https://www.youtube.com/embed/@item.OriginalVideoPath.Substring(32)" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                        </a>


                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <!-- Post Content -->
                                    <div class="post-content mt-0">

                                        <a href="@item.OriginalVideoPath" target="_blank" class="post-title mb-2">@item.Title</a>
                                        <div class="post-meta d-flex align-items-center mb-2">
                                            <a href="#" class="post-author">OAK Academy</a>
                                            <i class="fa fa-circle" aria-hidden="true"></i>
                                            <a href="#" class="post-date">@item.AddDate.ToString("dd.MM.yyyy dddd")</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    foreach (var item in Model.CategoryPostList)
                    {
                        <!-- Single Post Area -->
                        <div class="single-post-area style-2">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-6">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <a href="@Url.RouteUrl("PostDetail",new { @CategoryName=Bll.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink,@ID=item.ID})"><img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt=""></a>


                                    </div>
                                </div>
                                <div class="col-12 col-md-6">-
                                    <!-- Post Content -->
                                    <div class="post-content mt-0">
                                        <a href="@Url.RouteUrl("Category", new { @CategoryName=Bll.SeoLink.GenerateUrl(item.CategoryName)})" class="post-cata cata-sm cata-success">@item.CategoryName</a>
                                        <a href="@Url.RouteUrl("PostDetail",new { @CategoryName=Bll.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink,@ID=item.ID})" class="post-title mb-2">@item.Title</a>
                                        <div class="post-meta d-flex align-items-center mb-2">
                                            <a href="#" class="post-author">OAK Academy</a>
                                            <i class="fa fa-circle" aria-hidden="true"></i>
                                            <a href="#" class="post-date">@item.AddDate.ToString("dd.MM.yyyy dddd")</a>
                                        </div>
                                        <p class="mb-2">@item.ShortContent</p>
                                        <div class="post-meta d-flex">
                                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>@item.CommentCount</a>
                                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                    }
                }


            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <div class="sidebar-area">

                    <br />
                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget mb-50">
                        <!-- Section Heading -->
                        <div class="section-heading style-2 mb-30">
                            <h4>Breaking Training</h4>
                            <div class="line"></div>
                        </div>

                        @foreach (var item in Model.BreakingPost)
                        {
                            <div class="single-blog-post d-flex">
                                <div class="post-thumbnail">
                                    <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt="">
                                </div>
                                <div class="post-content">
                                    <a href="@Url.RouteUrl("PostDetail",new { @CategoryName=Bll.SeoLink.GenerateUrl(item.CategoryName),@SeoLink=item.SeoLink,@ID=item.ID})" class="post-title">@item.Title</a>
                                    <div class="post-meta d-flex justify-content-between">
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @item.CommentCount</a>
                                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>

                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget add-widget mb-50">
                        <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImage/@Model.Adslist[0].ImagePath" alt=""></a>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Archive List Posts Area End ##### -->
