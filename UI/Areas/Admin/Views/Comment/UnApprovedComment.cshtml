
@{
    ViewBag.Title = "UnApprovedComment";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.CommentDTO>

<section class="content-header">
    <h1>Unapproved Comment List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item"><a href="#">Comment</a></li>
        <li class="breadcrumb-item active"><a href="/Admin/Comment/AllCommentList/">Unapproved Comment List</a></li>
    </ol>
</section>
<br />

<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Comment/AllComment'">All Comment List</button>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approved</th>
                    <th>Delete</th>
                </tr>
            </thead>
           
            @foreach (var item in Model)
            {
                <tbody>
                    <tr id="a_@item.ID">

                        <td>@item.Name</td>
                        <td>@item.CommentContent</td>
                        <td>@item.Email</td>
                        <td>@item.AddDate.ToString("dd.MM.yyy")</td>
                        <td align="center" valign="middle">
                            <a href="/Admin/Comment/ApprovedComment/@item.ID">
                                <br />
                                <img src="~/Areas/Admin/Content/icon/checked_25px.png" />
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <br />
                                <img src="~/Areas/Admin/Content/icon/cancel_25px.png" onclick="AskQuestion('/Admin/Comment/DeleteComment/',@item.ID)" />
                            </a>
                        </td>
                    </tr>
                </tbody>
            }

            <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approved</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessages.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Admin/Content/JS/DeleteRecord.js"></script>

