
@model DTO.UserDTO

<div class="box-body">
    <div class="form-group">
        <label>UserName</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    @if (Model.isAdmin)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="isAdmin" checked="@Model.isAdmin" value="true" />
            <label class="form-check-label">is Admin?</label>
        </div>
    }
    <input type="text" name="ID" value="@Model.ID" hidden />
    <div class="form-group">
        @Html.LabelFor(x => x.UserImage)
        <br />
        <input type="file" name="UserImage" accept="imge/gif, image/jpeg, image/png, image/jpg"
               onchange="$('#UserImage')[0].src = window.URL.createObjectURL(this.files[0])" />

        <br />

        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/UserImage/@Model.ImagePath" width="300" height="200" id="UserImage" />
        }
        else
        {
            <img src="" width="300" height="200" id="UserImage" />
        }
    </div>
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label>E-mail</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "E-mail" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="card-footer">
        <button class="btn btn-primary">Save</button>
    </div>
</div>